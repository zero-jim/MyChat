<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyChat.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorSecondary">@color/color_secondary</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="popupMenuBackground">@color/app_background</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Base.Theme.MyChat" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorSecondary">@color/color_secondary</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:background">@color/app_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="Theme.MyChat" parent="Base.Theme.MyChat" />

    <style name="Theme.MyChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

</resources>